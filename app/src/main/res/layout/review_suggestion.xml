<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="@dimen/spacing_unit_normal"
  android:paddingBottom="@dimen/spacing_unit_normal"
  android:paddingStart="@dimen/spacing_unit_normal"
  android:paddingEnd="@dimen/spacing_unit_normal"
  android:minHeight="88dp">

  <com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/review_listitem_form_profile_photo"
    android:layout_width="36dp"
    android:layout_height="36dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:riv_oval="true"/>

  <TextView
    android:id="@+id/review_listitem_form_suggestion"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_unit_narrow"
    android:layout_marginEnd="@dimen/spacing_unit_narrow"
    android:background="@drawable/bg_review_form_suggestion"
    android:text="@string/msg_make_review_suggestion"
    android:textColor="@color/colorOnSurfaceMediumEmphasis"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/review_listitem_form_profile_photo"
    app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>