<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="@dimen/spacing_unit_normal"
  android:paddingBottom="@dimen/spacing_unit_normal"
  android:minHeight="88dp">

  <android.support.v4.widget.ContentLoadingProgressBar
    android:id="@+id/donation_listitem_loading_progressbar"
    style="@style/Widget.AppCompat.ProgressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/donation_listitem_thumbnail"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_margin="@dimen/spacing_unit_normal"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:riv_oval="true"/>

  <ImageButton
    android:id="@+id/donation_listitem_detail_button"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_arrow_right_black_24"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
    android:id="@+id/donation_listitem_dong_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_unit_normal"
    android:paddingEnd="@dimen/spacing_unit_normal"
    android:orientation="horizontal"
    android:visibility="gone"
    app:layout_constraintBottom_toTopOf="@id/donation_listitem_title"
    app:layout_constraintEnd_toStartOf="@id/donation_listitem_detail_button"
    app:layout_constraintStart_toEndOf="@id/donation_listitem_thumbnail"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_location_black_18"/>

    <TextView
      android:id="@+id/donation_listitem_dong"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="@string/msg_loading"
      android:textColor="@color/colorOnSurfaceMediumEmphasis"
      android:textSize="12sp"/>
  </LinearLayout>

  <TextView
    android:id="@+id/donation_listitem_title"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_unit_normal"
    android:paddingEnd="@dimen/spacing_unit_normal"
    android:ellipsize="end"
    android:maxLines="1"
    android:text="@string/msg_loading"
    android:textColor="@color/colorOnSurfaceHighEmphasis"
    android:textSize="16sp"
    android:visibility="gone"
    app:layout_constraintBottom_toTopOf="@id/donation_listitem_updatedat"
    app:layout_constraintEnd_toStartOf="@id/donation_listitem_detail_button"
    app:layout_constraintStart_toEndOf="@id/donation_listitem_thumbnail"
    app:layout_constraintTop_toBottomOf="@id/donation_listitem_dong_layout"
    app:layout_constraintVertical_chainStyle="packed"/>

  <TextView
    android:id="@+id/donation_listitem_updatedat"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_unit_normal"
    android:paddingEnd="@dimen/spacing_unit_normal"
    android:ellipsize="end"
    android:maxLines="1"
    android:text="@string/msg_loading"
    android:textColor="@color/colorOnSurfaceMediumEmphasis"
    android:textSize="12sp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/donation_listitem_detail_button"
    app:layout_constraintStart_toEndOf="@id/donation_listitem_thumbnail"
    app:layout_constraintTop_toBottomOf="@id/donation_listitem_title"
    app:layout_constraintVertical_chainStyle="packed"/>
</android.support.constraint.ConstraintLayout>