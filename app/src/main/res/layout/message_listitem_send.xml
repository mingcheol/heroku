<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="@dimen/spacing_unit_very_narrow"
  android:paddingBottom="@dimen/spacing_unit_very_narrow"
  android:paddingStart="@dimen/spacing_unit_normal"
  android:paddingEnd="@dimen/spacing_unit_normal">

  <TextView
    android:id="@+id/message_listitem_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_unit_narrow"
    android:paddingBottom="@dimen/spacing_unit_narrow"
    android:paddingStart="@dimen/spacing_unit_normal"
    android:paddingEnd="@dimen/spacing_unit_normal"
    android:background="@drawable/bg_message_send"
    android:maxWidth="150dp"
    android:text="@string/msg_loading"
    android:textColor="@color/colorOnPrimary"
    android:textSize="14sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>